Bootstrap: docker
From: python:3.8.0

%labels
    Creator polaya07
    This is the application container for parallel rf of the SOMOSPIE framework

%setup
    mkdir -p ${APPTAINER_ROOTFS}/train
    mkdir -p ${APPTAINER_ROOTFS}/eval
    mkdir -p ${APPTAINER_ROOTFS}/predictions

%files
    ../../use-cases/SOMOSPIE/SOMOSPIE/code/modeling/rf.py /rf.py

%post
    pip3 install pandas numpy scikit-learn

%runscript
    python3 /rf.py -t /train/train.csv -e /eval/eval.csv -o /predictions/predictions.csv
